<div class="block-news {% if component_class %}{{ component_class }}{% endif %}">
  <div class="container">
    <h2 class="block-title">{{ block_title }}</h2>

    <div class="block-inner">
      <div class="row news-list news-slide-carousel">
      {% for item in return_items %}
        {% include 'post-item.twig' with {'post': item, 'classes': 'col-md-3 news-item-wrapper'} %}
      {% endfor %}
      </div>
    </div>
  </div>
</div>