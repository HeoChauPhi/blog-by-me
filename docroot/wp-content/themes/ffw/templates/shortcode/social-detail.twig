<div class="social-wrapper">
  <div class="social-icons">
    <ul class="social-icons__list">
      <li class="social-icons__item">
        <a class="social-icons__icon icon-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{ permalink }}&title={{ title }}&summary=&source=" target="_blank"><i class="fab fa-linkedin"></i></a>
      </li>
      <li class="social-icons__item">
        <a class="social-icons__icon icon-facebook" href="http://www.facebook.com/sharer/sharer.php?u={{ permalink }}" target="_blank"><i class="fab fa-facebook-square"></i></a>
      </li>
      <li class="social-icons__item">
        <a class="social-icons__icon icon-twitter" href="http://www.twitter.com/share?url={{ permalink }}" target="_blank"><i class="fab fa-twitter-square"></i></a>
      </li>
    </ul>
  </div>
  {% if print_icon == 1 %}
  <div class="print-content"><a href="javascript:window.print()">{{ pll_e('Print', 'ffw_theme') }}</a></div>
  {% endif %}
</div>
